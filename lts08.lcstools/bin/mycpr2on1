#
# dest=ih55517a
dest=ih1d401
export dest
#
set -- `getopt ?xd: ${*}`
#
if [ $? -ne 0 ]
then
	echo "usage: ${0} [-?x] [-d destination] files" >&2
	exit 2
fi
#
for i in ${*}
do
	case "${i}" in
	-x)
		set -x
		shift
		;;
	-d)
		dest="${2}"
		shift 2
		;;
	--)
		shift
		break
		;;
	esac
done
#
if [ $# -eq 0 ]
then
	set -- -i-
fi
#
cpr -n -s -C -x -w 90 -F "%3d " $* | \
postcpr -n2 | \
prt -l postscript -d ${dest} -j rumore -u rumore
